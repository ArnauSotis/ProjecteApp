<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Juego.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Juego.Juego"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Juego.Register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Juego.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Juego.SplashActivityStart"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".Juego.OpcionesMenu"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Juego.ListaObjetos"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Juego.MostrarUnObjeto"
            android:theme="@style/AppTheme.NoActionBar"/>
        <service
            android:name=".AudioService"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name" />
    </application>


</manifest>