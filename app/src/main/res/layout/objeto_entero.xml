<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    tools:context=".Juego.MostrarUnObjeto">


    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/minecraft"
        android:text="DescripciÃ³n:"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/foto_obj" />

    <TextView
        android:id="@+id/coste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/minecraft"
        android:text="Coste:"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/foto_obj" />

    <TextView
        android:id="@+id/valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/minecraft"
        android:text="Valor:"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/foto_obj"
        app:layout_constraintTop_toBottomOf="@+id/tipo_obj" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/minecraft"
        android:text="Nombre:"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/foto_obj"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="Tipo:"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/foto_obj"
        app:layout_constraintTop_toBottomOf="@+id/nombre_obj" />

    <TextView
        android:id="@+id/text_coste"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coste" />

    <TextView
        android:id="@+id/text_valor"
        android:layout_width="166dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:text="T"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/foto_obj"
        app:layout_constraintTop_toBottomOf="@+id/valor" />

    <ImageView
        android:id="@+id/foto_obj"
        android:layout_width="134dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/screen_background_light_transparent" />

    <TextView
        android:id="@+id/nombre_obj"
        android:layout_width="166dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:text=""
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/foto_obj"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <TextView
        android:id="@+id/tipo_obj"
        android:layout_width="166dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/foto_obj"
        app:layout_constraintTop_toBottomOf="@+id/tipo" />

    <TextView
        android:id="@+id/text_descrip"
        android:layout_width="343dp"
        android:layout_height="128dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/descripcion" />

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="71dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>